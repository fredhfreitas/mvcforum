
@{
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
    ViewBag.Title = "Clube da Retro | Home";
    ViewBag.MetaDesc = "O Clube da Retro é o espaço para trocar experiências, divulgar eventos e ficar por dentro do universo das retroescavadeiras.";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="http://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<script type="text/javascript" src="http://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<script>
    setTimeout(function () {
        $('.slider-destaque').slick({
            prevArrow: '<button type="button" class="slick-prev"><i class="fas fa-arrow-left"></i></button>',
            nextArrow: '<button type="button" class="slick-next"><i class="fas fa-arrow-right"></i></button>'
        });
    }, 100);
</script>
<div class="row">
    <div class="col-md-12">
        @*Destaque*@
        @Html.Action("GetPostByGuid", "Post", new { value = "2A8CF243-0378-4423-9595-A9B600BE044C" })
    </div>
</div>
<div class="row homesection">
    <div class="col-md-8">
        <h3 class="title-bar">Tópicos <span>destacados</span></h3>
        @Html.Action("TopicosDestacados", "Topic", new { Values = "8" })
        <div class="clearfix"></div>
        <a href="/home/topicosDestacados" class="btn btn-primary btn-full">Ver todos</a>
    </div>
    <div class="col-md-4 sidelayoutsection">
        <div class="main-side-box clearfix">
            <div class="topics side">
                <h3 class="title-bar">Tópicos <span>mais vistos</span></h3>
                @Html.Action("TopicosMaisVistos", "Topic", new { Values = "4" })
                <a href="/home/topicosMaisVistos" class="btn btn-primary">Ver todos</a>
            </div>
            <div class="topics side">
                <h3 class="title-bar">Tópicos <span>recentes</span></h3>
                @Html.Action("TopicosRecentes", "Topic", new { Values = "4" })
                <a href="/home/TopicosRecentes" class="btn btn-primary">Ver todos</a>
            </div>
            @*<div>anuncios</div>*@
            @*<div>videos</div>*@
