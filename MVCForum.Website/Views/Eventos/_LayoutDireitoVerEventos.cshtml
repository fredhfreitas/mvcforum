@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section SocialMeta{
    @RenderSection("SocialMeta", false)
}
@section Header {
    @RenderSection("Header", false)
}
<script src="~/Scripts/zabuto_calendar.min.js"></script>
<link href="~/Themes/zabuto_calendar.min.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-8">
        @RenderBody()
    </div>
    <div class="col-md-4 sidelayoutsection">
        <div class="main-side-box clearfix">
            <a href="/Eventos/Novo" class="btn btn-primary" style="width: 100%">NOVO EVENTO</a>

            <div class="categoryindex">
                <div class="side-box categories-box">
                    <h3 class="title-bar">Opções</h3>
                    <h5>Clique no botão abaixo para ver os eventos que você demonstrou interesse:</h5>
                    <ul>
                        <li class="catitem">
                            <a style="border-color: #ced1d1" href="/Eventos/Index?tipoEvento=0">Tenho Interesse</a>
                        </li>
                        <li class="catitem">
                            <a style="border-color: #ced1d1" href="/Eventos/Index?tipoEvento=1">Eu Vou</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="categoryindex">
                <div class="side-box categories-box">
                    <h3 class="title-bar">Localização</h3>
                    <h5>Clique no botão abaixo para ver os eventos de acordo com cada região:</h5>
                    <ul>
                        <li class="catitem">
                            <select id="estado" name="estado">
                                <option value="AC">Acre</option>
                                <option value="AL">Alagoas</option>
                                <option value="AP">Amapá</option>
                                <option value="AM">Amazonas</option>
                                <option value="BA">Bahia</option>
                                <option value="CE">Ceará</option>
                                <option value="DF">Distrito Federal</option>
                                <option value="ES">Espírito Santo</option>
                                <option value="GO">Goiás</option>
                                <option value="MA">Maranhão</option>
                                <option value="MT">Mato Grosso</option>
                                <option value="MS">Mato Grosso do Sul</option>
                                <option value="MG">Minas Gerais</option>
                                <option value="PA">Pará</option>
                                <option value="PB">Paraíba</option>
                                <option value="PR">Paraná</option>
                                <option value="PE">Pernambuco</option>
                                <option value="PI">Piauí</option>
                                <option value="RJ">Rio de Janeiro</option>
                                <option value="RN">Rio Grande do Norte</option>
                                <option value="RS">Rio Grande do Sul</option>
                                <option value="RO">Rondônia</option>
                                <option value="RR">Roraima</option>
                                <option value="SC">Santa Catarina</option>
                                <option value="SP">São Paulo</option>
                                <option value="SE">Sergipe</option>
                                <option value="TO">Tocantins</option>
                                <option value="ES">Estrangeiro</option>
                            </select>
                        </li>
                        <li class="catitem">
                            <input id="txtCidade" type="text" />
                        </li>
                    </ul>
                    <input type="button" title="Filtrar" onclick="filtrar();" class="btn btn-primary" value="Filtrar" />
                </div>
            </div>

            <div class="categoryindex">
                <div class="side-box categories-box">
                    <h3 class="title-bar">Calendário</h3>
                    <h5>Clique em uma data no calendário abaixo para ver os eventos deste dia:</h5>
                    <ul>
                        <li class="catitem">
                            @Html.Action("Calendario", "Eventos")
                            @*@Html.Partial("_Calendario")*@
                        </li>
                    </ul>
                </div>
            </div>


            @RenderSection("side", false)
        </div>
    </div>
</div>
@section Footer {

    @RenderSection("Footer", false)
}


<script>

    function filtrar() {
        window.location.href = ("/Eventos/Index?valor=" + $("#estado").val() + "-" + $("#txtCidade").val());
    }
    
</script>