@model MvcForum.Web.ViewModels.Favourite.MyFavouritesViewModel
@{
    Layout = "~/Views/Shared/_LayoutRightSideBar.cshtml";
    ViewBag.Title = "Clube da Retro | Favoritos";
    ViewBag.MetaDesc = "Organize aqui seus posts favoritos do Clube da Retro!";
}

@section side
{
    @Html.Partial("_CommonSideNav")
}

<div class="myfavourites">
    
    <h1 class="title-bar">Favoritos</h1>

    @if (Model.Posts.Any())
    {
        foreach (var postViewModel in Model.Posts)
        {
            @Html.Partial("_Post", postViewModel)
        }
    }
    else
    {
        <p>@Html.Lang("Favourites.NoMemberFavourites")</p>
    }
</div>